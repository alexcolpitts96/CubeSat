#include "../Camera/camera.h"
#include "../FTM/ftm.h"
#include "../I2C/i2c.h"
#include "../ACCEL/accel.h"
#include "../SPI/spi.h"
#include <stdio.h>

int main(){
int data=0;
	FTM0_init();
	GPIO_init();
	UART1_putty_init();
	init_I2C();
	SPI1_Init(16);
	redLED(0);
	greenLED(0);
	//blueLED(1);
	enable_fifo();
	//capture();
	accel_init();
	struct sensor_dat *data;
while(1){

	sensor_read(data);
	char test[60];
	sprintf(test," x direction: %d\n\r y direction: %d\n\r z direction: %d\n\r",data->dat_X,data->dat_Y,data->dat_Z);
	putty_putstr(test);

	//GPIOB_PCOR |= 1;
	//camera_init();
	//capture();
	//GPIOB_PSOR |= 1;
}
	//camera_init();
	//capture();

	return 0;
}

